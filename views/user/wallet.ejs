<%- include('../layout/userLayouts/profileHeader') -%>


    <style>
        /* Custom styling for the wallet section */
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            /* Set your desired background color */
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #3498db;
            /* Set your desired background color for the heading */
            border-bottom: 1px solid #2980b9;
            padding: 15px;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            color: #fff;
            /* Set text color for the heading */
        }

        .card-body {
            padding: 20px;
        }

        /* Styling for wallet balance and history */
        .wallet-balance {
            font-size: 18px;
            font-weight: bold;
            color: #28a745;
            /* Green color for positive balance */
        }

        .wallet-history {
            list-style: none;
            padding: 0;
        }

        .wallet-history li {
            border-bottom: 1px solid #dee2e6;
            padding: 15px 0;
        }

        /* Optional: Add animation to the cards */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animated {
            animation-duration: 0.5s;
            animation-fill-mode: both;
        }

        .fadeInUp {
            animation-name: fadeInUp;
        }
    </style>

    <body>
        <%- include('../layout/userLayouts/profileSidebar') -%>
            <%- include('../layout/userLayouts/profileNav') -%>

                <div class="d-flex justify-content-center align-items-center vh-100">
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header bg-success">
                                            <h4 class="card-title text-white">Wallet</h4>
                                        </div>
                                        <div class="card-body">
                                            <p>Wallet Balance: â‚¹<%= user.wallet.toFixed(2) %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-header bg-danger">
                                            <h4 class="card-title text-white">Wallet history</h4>
                                        </div>
                                        <div class="card-body">
                                            <ul class="list-group">
                                                <% user.wallet_history.reverse().forEach(transaction=> { %>
                                                    <li class="list-group-item">
                                                        <p>Date: <%= moment(transaction.date).format('dddd, MMM Do YYYY') %>
                                                        </p>
                                                        <p>Amount: <%= transaction.amount.toFixed(2) %>
                                                        </p>
                                                        <p>Description: <%= transaction.description %>
                                                        </p>
                                                    </li>
                                                    <% }); %>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>




                <%- include('../layout/userLayouts/profileFooter') -%>


                    </html>
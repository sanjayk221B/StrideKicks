<%- include('../layout/userLayouts/header') -%>

	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Register</h1>
					<nav class="d-flex align-items-center">
						<a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
						<a href="#">Register</a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!-- ================== Sign UP Box Area ================== -->
	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Register</h3>
						<form class="row login_form" action="" method="post"
							onsubmit="return validateForm('signupForm')" id="signupForm">
							<div class="col-md-12 form-group">
								<% if (locals.code) { %>
									<input type="hidden" name="code" id="code" value="<%= code %>">
									<% } else { %>
										<% }%>

											<input type="text" class="form-control" id="username" name="username"
												placeholder="Username">
											<div id="usernameError" class="error-message text-danger"></div>
							</div>
							<div class="col-md-12 form-group">
								<input type="email" class="form-control" id="email" name="email" placeholder="Email">
								<div id="emailError" class="error-message text-danger"></div>
							</div>
							<div class="col-md-12 form-group">
								<input type="tel" class="form-control" id="mobileNumber" name="mobile"
									placeholder="Phone">
								<div id="mobileNumberError" class="error-message text-danger"></div>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" id="password" name="password"
									placeholder="Password">
								<div id="passwordError" class="error-message text-danger"></div>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
									placeholder="Confirm Password">
								<div id="confirmPasswordError" class="error-message text-danger"></div>
							</div>
							<div class="col-md-12 form-group">
								<div class="creat_account">
								</div>
							</div>
							<div class="col-md-12 form-group">
								<% if (typeof message !=='undefined' ) { %>
									<p style="color: red;">
										<%= message %>
									</p>
									<% } %>
										<button type="submit" value="submit" class="primary-btn">Sign UP</button>
										<a href="#"></a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!--================End Sign Up Box Area =================-->
	<%- include('../layout/userLayouts/footer') -%>





		<!-- validation -->
		<script>
			// document.getElementById('contactForm').onsubmit = function (event) {
			// 	event.preventDefault(); // Prevent the default form submission for testing purposes
			// 	console.log('Form submitted');
			// };


			function validateForm() {
				var valid = true;

				var username = $("#username").val();
				if (!username || username.trim() === "") {
					$("#usernameError").html("Username is required");
					valid = false;
				} else if (!/^[a-zA-Z]+$/.test(username)) {
					$("#usernameError").html("Username should contain only letters");
					valid = false
				} else {
					$("#usernameError").html("");
				}

				// Email Validation
				var email = $("#email").val();
				if (!email || email.trim() === "") {
					$("#emailError").html("Email cannot be empty");
					valid = false;
				} else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
					$("#emailError").html("Invalid email address");
					valid = false;
				} else {
					$("#emailError").html("");
				}

				// Phone Number Validation
				var phoneNumber = $("#mobileNumber").val();

				if (!phoneNumber || phoneNumber.trim() === "") {
					$("#mobileNumberError").html("Mobile number cannot be empty");
					valid = false;
				} else if (!/^\d+$/.test(phoneNumber)) {
					$("#mobileNumberError").html("Invalid mobile number");
					valid = false;
				} else if (phoneNumber.length !== 10) {
					$("#mobileNumberError").html("Phone number should be 10 digits");
					valid = false;
				} else {
					$("#mobileNumberError").html("");
				}


				// Password Validation
				var password = $("#password").val();
				if (!password || password.trim() === "") {
					$("#passwordError").html("Password is required");
					valid = false;
				} else if (!/^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+])[A-Za-z\d!@#$%^&*()_+]{8,}$/.test(password)) {
					$("#passwordError").html("Password should be at least 8 characters long, contain an uppercase letter, a digit, and a special character");
					valid = false;
				} else {
					$("#passwordError").html("");
				}


				// Confirm Password Validation
				var confirmPassword = $("#confirmPassword").val();
				if (!confirmPassword || confirmPassword.trim() === "") {
					$("#confirmPasswordError").html("Confirm your password ");
					valid = false;
				} else if (confirmPassword !== password) {
					$("#confirmPasswordError").html("Passwords do not match");
					valid = false;
				} else {
					$("#confirmPasswordError").html("");
				}
				return valid;

			}
			// </script>

		</body>

		</html>
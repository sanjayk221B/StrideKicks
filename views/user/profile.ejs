<%- include('../layout/userLayouts/profileHeader') -%>

<style>
    .card {
        /* Add styling for the card */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        /* Add styling for the card body */
        padding: 20px;
    }

    .form-group {
        /* Add styling for form groups inside the card */
        margin-bottom: 15px;
    }

    /* Add styling for the userProfile area */
    .content {
        margin-top: 20px;
    }

    /* Optional: Add background color to the body */
    body {
        background-color: #f4f4f4;
    }
</style>
<style>
    /* Custom Styles */
    body {
        background-color: #f4f4f4;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        background-color: #fff;
        /* Add a background color */
    }

    .card-body {
        padding: 3000px;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>

<body>
    <%- include('../layout/userLayouts/profileSidebar') -%>
        <%- include('../layout/userLayouts/profileNav') -%>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-7 mx-auto">
                            <div class="card" style="border-radius: 40px;">
                                <!-- <div class="card-header ">
                                    <h4 class="card-title"></h4>
                                </div> -->
                                <div class="card-body">
                                    <form>
                                        <div class="row ">
                                            <div class="col-md-11 pr-1">
                                                <div class="form-group">
                                                    <label class="text-dark">Name</label>
                                                    <input type="text" class="form-control" placeholder="Company"
                                                        value="<%= user.username %>" readonly>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-11 pl-1">
                                            <div class="form-group">
                                                <label class="text-dark" for="exampleInputEmail1">Email address</label>
                                                <input type="email" class="form-control" value="<%= user.email %>"
                                                    readonly>
                                            </div>
                                        </div>
                                        <div class="col-md-11 pl-1">
                                            <div class="form-group">
                                                <label class="text-dark">Phone</label>
                                                <input type="text" class="form-control" value="<%= user.mobile %>"
                                                    readonly>
                                            </div>
                                        </div>
                                </div>
                                </form>
                            </div>
                            <div class="card mt-4" style="border-radius: 20px;">
                                <div class="card-body">
                                    <h5 class="card-title">Referral Link</h5>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="referralLink" readonly>
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary"
                                                onclick="copyReferralLink()">Copy</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</body>
<%- include('../layout/userLayouts/profileFooter') -%>

<script>
    // Function to generate and display the referral link
    function generateReferralLink() {
        // Retrieve the user's referral code from the server-side (you need a way to pass this data to the client-side)
        // For demonstration purposes, let's assume you have a global variable 'userReferralCode'
        var userReferralCode = "<%= user.referralCode %>";

        // Construct the referral link based on the user's referral code
        var referralLink = "localhost:3001/register?code=" + userReferralCode;

        // Display the referral link in the input field
        document.getElementById("referralLink").value = referralLink;
    }

    // Function to copy the referral link to the clipboard
    function copyReferralLink() {
        var referralLinkInput = document.getElementById("referralLink");

        // Select the text in the input field
        referralLinkInput.select();
        referralLinkInput.setSelectionRange(0, 99999); /* For mobile devices */

        // Copy the text to the clipboard
        document.execCommand("copy");

        // Alert the user that the link has been copied
        alert("Referral link copied to clipboard!");
    }

    // Call the function to generate the referral link when the page loads or when needed
    generateReferralLink();
</script>

</html>
<%- include('../layout/userLayouts/header') -%>

<!-- ================== Reset Password Box Area ================== -->
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Change Password Form -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Change Password</h4>
                    </div>
                    <div class="card-body">
                        <form action="/resetPassword" method="post"> 
                            <input type="hidden" name="userId" value="<%= userId %>">
                            <div class="form-group">
                                <label for="newPassword">New Password</label>
                                <input type="password" name="newPassword" class="form-control" value="">
                            </div>

                            <div class="form-group">
                                <label for="confirmPassword">Confirm Password</label>
                                <input type="password" name="confirmPassword" class="form-control" value="">
                            </div>
                            <% if (typeof message !== 'undefined') { %>
                                <p><%= message %></p>
                            <% } %>
                            <div class="text-center">
                                <button type="submit" id="updatePasswordBtn" class="btn btn-info btn-fill">Update Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Reset Password Box Area =================-->

</body>
</html>

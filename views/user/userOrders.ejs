    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        border: 1px solid #ddd;
        /* Add border to create a button-like appearance */
        margin: 0 4px;
        /* Add spacing between pagination buttons */
    }

    .pagination a.active {
        background-color: #ff931f;
        color: white;
    }

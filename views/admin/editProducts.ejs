                <!-- Edit Products Form Start -->
                <div class="container-fluid pt-5 px-4">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-9">
                            <div class="card bg-secondary text-white">
                                <div class="card-header bg-dark">
                                    <h5>Edit Products</h5>
                                </div>
                                <div class="card-body">
                                    <form action="/admin/editProducts" id="productForm" enctype="multipart/form-data"
                                        method="post">

                                        <input type="hidden" id="productId" name="id" value="<%= products._id %>">

                                        <div class="mb-3">
                                            <label for="productName" class="form-label">Product Name</label>
                                            <input type="text" class="form-control bg-dark text-white" id="productName"
                                                name="name" value="<%= products.name %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="productDescription" class="form-label">Description</label>
                                            <textarea class="form-control bg-dark text-white" id="productDescription"
                                                name="description" rows="3"><%= products.description %></textarea>
                                        </div>

                                        <div class="mb-3">
                                            <label for="productQuantity" class="form-label">Quantity</label>
                                            <input type="number" class="form-control bg-dark text-white"
                                                id="productQuantity" name="quantity"
                                                value="<%= products.stockQuantity %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="productPrice" class="form-label">Price</label>
                                            <input type="number" class="form-control bg-dark text-white"
                                                id="productPrice" name="price" value="<%= products.price %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="productCategory" class="form-label">Category</label>
                                            <select class="form-control bg-dark text-white" id="productCategory"
                                                name="category" required>
                                                <% categories.forEach(category=> { %>
                                                    <option value="<%= category.name %>" <% if
                                                        (category.name===products.category) { %> selected <% } %>>
                                                            <%= category.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>

                                        <div class="mb-3">
                                            <label for="productImage" class="form-label">Product Image</label>
                                            <div class="d-flex flex-wrap">
                                                <% for(let i=0; i<products.image.length;i++) { %>
                                                    <div class="m-2 text-center position-relative"
                                                        data-image-index="<%= i %>"
                                                        data-image-name="<%= products.image[i] %>">
                                                        <img src="/sharpImages/<%= products.image[i] %>"
                                                            class="img-sm img-thumbnail" alt="" width="85px">
                                                        <button type="button"
                                                            class="btn delete-image-btn position-absolute end-0 text-danger"
                                                            style="font-size: 1.5rem; top: -8px;">&times;</button>
                                                    </div>
                                                    <% } %>
                                                        <div id="imagePreviewContainer" class="d-flex flex-wrap"
                                                            style="max-width: 750px;"></div>

                                            </div>
                                            <% if( messages.message ) { %>
                                                <p style="color: red;">
                                                    <%= messages.message %>
                                                </p>
                                                <% } %>

                                                    <input type="file" class="form-control bg-dark text-white"
                                                        id="productImage" name="images" multiple>
                                        </div>

                                        <button type="submit" class="btn btn-danger">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Edit Products Form End -->

                <%- include('../layout/adminLayouts/footer') -%>
                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            document.addEventListener("click", function (event) {
                                if (event.target.classList.contains("delete-image-btn")) {
                                    const imageContainer = event.target.closest("[data-image-index]");
                                    const imageIndex = imageContainer.dataset.imageIndex;
                                    const img = imageContainer.dataset.imageName;
                                    deleteImage(imageIndex, img);
                                }
                            });

                            //  event listener for the file input change
                            const productImageInput = document.getElementById("productImage");

                            productImageInput.addEventListener("change", function () {
                                previewImages(this); // 'this' refers to the file input element
                            });


                            // Function to send a request to delete the image
                            async function deleteImage(imageIndex, img) {
                                try {
                                    const productId = document.getElementById("productId").value;

                                    const response = await fetch("/admin/deleteImage", {
                                        method: "POST",
                                        headers: {
                                            "Content-Type": "application/json",
                                        },
                                        body: JSON.stringify({ img, productId }),
                                    });

                                    const result = await response.json();

                                    if (result.success) {
                                        // Update the UI to reflect the deleted image
                                        const imageContainer = document.querySelector(`[data-image-index="${imageIndex}"]`);
                                        imageContainer.remove();
                                    } else {
                                        console.error("Image deletion failed:", result.error);
                                    }
                                } catch (error) {
                                    console.error("Error deleting image:", error.message);
                                }
                            }

                            // Function to handle image preview for both existing and newly added images
                            function previewImages(input) {
                                const previewContainer = document.getElementById("imagePreviewContainer");

                                if (input.files) {
                                    for (let i = 0; i < input.files.length; i++) {
                                        const reader = new FileReader();
                                        const previewDiv = document.createElement("div");
                                        previewDiv.classList.add("m-2", "text-center", "position-relative");

                                        reader.onload = function (e) {
                                            const img = document.createElement("img");
                                            img.src = e.target.result;
                                            img.classList.add("img-sm", "img-thumbnail");
                                            img.style.width = "85px";  // Set the width
                                            img.style.height = "120px"; // Set the height
                                            previewDiv.appendChild(img);
                                        };

                                        reader.readAsDataURL(input.files[i]);

                                        const closeButton = document.createElement("button");
                                        closeButton.type = "button";
                                        closeButton.classList.add("btn", "delete-image-btn", "position-absolute", "end-0", "text-danger");
                                        closeButton.innerHTML = "&times;";
                                        closeButton.onclick = function () {
                                            previewDiv.remove();
                                        };

                                        previewDiv.appendChild(closeButton);
                                        previewContainer.appendChild(previewDiv);
                                    }
                                }
                            }


                        });
                    </script>
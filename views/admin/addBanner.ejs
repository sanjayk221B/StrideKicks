                    <!-- Add Banner Form Start -->
                    <div class="container-fluid pt-5 px-4">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-9">
                                <div class="card bg-secondary text-white">
                                    <div class="card-header bg-dark">
                                        <h5>Add Banner</h5>
                                    </div>
                                    <div class="card-body">
                                        <form id="bannerForm" action="/admin/addBanner" enctype="multipart/form-data"
                                            method="post">

                                            <div class="mb-3">
                                                <label for="bannerTitle" class="form-label">Banner Title</label>
                                                <input type="text" class="form-control bg-dark text-white"
                                                    id="bannerTitle" name="title" placeholder="Banner Title">
                                                <p id="bannerTitleError" class="error-message text-danger"></p>
                                            </div>

                                            <div class="mb-3">
                                                <label for="bannerDescription" class="form-label">Description</label>
                                                <textarea class="form-control bg-dark text-white" id="bannerDescription"
                                                    name="description" placeholder="Description" rows="3"></textarea>
                                                <p id="bannerDescriptionError" class="error-message text-danger"></p>
                                            </div>

                                            <div class="mb-3">
                                                <label for="bannerOccasion" class="form-label">Occasion</label>
                                                <input type="text" class="form-control bg-dark text-white"
                                                    id="bannerOccasion" name="occassion" placeholder="Occasion">
                                                <p id="bannerOccasionError" class="error-message text-danger"></p>
                                            </div>

                                            <!-- <div class="mb-3">
                                                <label for="bannerStatus" class="form-label">Status</label>
                                                <select class="form-control bg-dark text-white" id="bannerStatus"
                                                    name="status">
                                                    <option value="true">Active</option>
                                                    <option value="false">Inactive</option>
                                                </select>
                                                <p id="bannerStatusError" class="error-message text-danger"></p>
                                            </div> -->

                                            <div class="mb-3">
                                                <label for="bannerImage" class="form-label mb-10">Banner
                                                    Image</label><br>
                                                <div id="bannerImagePreview" class="preview-container mt-4"></div>
                                                <input type="file" class="form-control bg-dark text-white mt-4"
                                                    id="bannerImage" name="images" multiple>
                                                <p id="bannerImageError" class="error-message text-danger"></p>
                                            </div>

                                            <button type="submit" class="btn btn-danger">Submit</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Add Banner Form End -->

                    <%- include('../layout/adminLayouts/footer') -%>

                        <script>
                            document.getElementById("bannerForm").addEventListener("submit", function (event) {
                                // Validate Banner Title
                                var title = document.getElementById("bannerTitle").value.trim();
                                if (title === "") {
                                    document.getElementById("bannerTitleError").innerText = "Banner Title cannot be empty";
                                    event.preventDefault();
                                } else {
                                    document.getElementById("bannerTitleError").innerText = "";
                                }

                                // Validate Description
                                var description = document.getElementById("bannerDescription").value.trim();
                                if (description === "") {
                                    document.getElementById("bannerDescriptionError").innerText = "Description cannot be empty";
                                    event.preventDefault();
                                } else {
                                    document.getElementById("bannerDescriptionError").innerText = "";
                                }

                                // Validate Occasion
                                var occasion = document.getElementById("bannerOccasion").value.trim();
                                if (occasion === "") {
                                    document.getElementById("bannerOccasionError").innerText = "Occasion cannot be empty";
                                    event.preventDefault();
                                } else {
                                    document.getElementById("bannerOccasionError").innerText = "";
                                }

                                // Validate Image
                                var image = document.getElementById("bannerImage").value.trim();
                                var files = document.getElementById("bannerImage").files;
                                if (image === "" && files.length === 0) {
                                    document.getElementById("bannerImageError").innerText = "Please select a banner image";
                                    event.preventDefault();
                                } else {
                                    document.getElementById("bannerImageError").innerText = "";
                                }

                                // Validate Number of Images
                                if (files.length !== 1) {
                                    document.getElementById("bannerImageError").innerText = "Please select  one banner image";
                                    event.preventDefault();
                                } else {
                                    document.getElementById("bannerImageError").innerText = "";
                                }
                            });
                        </script>